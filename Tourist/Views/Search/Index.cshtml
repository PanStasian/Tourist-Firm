@model IEnumerable<Tourist.Models.Routes>

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/mainLink.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/media.css" />
    <link rel="stylesheet" href="css/fonts.css" />
    <!-- <script type="text/javascript" src="js/jquery.1.7.1.min.js"></script>  --> <!-- скролл по якорям -->
    <script type="text/javascript" src="~/js/scroll.js"></script>   <!-- скролл по странице -->
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
    <!-- <script type="text/javascript" src="top.js"></script> -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div>
        @using (Html.BeginForm("Index", "Search", FormMethod.Get))
        {
            <table class="table">
                <tr class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <th>
                        @Html.Label("Откуда вылет:")
                    </th>
                    <th>
                        @Html.TextBox("search_dep")
                    </th>
                </tr>

                <tr class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <td>
                        @Html.Label("Куда летим:")
                    </td>
                    <td>
                        @Html.TextBox("search_dest")
                    </td>
                </tr>

                <tr class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <td>
                        @Html.Label("Сколько готовы потратить:")
                    </td>
                    <td>
                        @Html.TextBox("search_price")
                    </td>
                </tr>
            </table>

            <input type="submit" class="alert-danger" value="Выбрать" />
        }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.route_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departure.departure_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination.destination_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.flight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination.Sights.sight_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination.Sights.rating)
                </th>

            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.route_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure.departure_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination.destination_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.flight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination.Sights.sight_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination.Sights.rating)
                </td>
                <td>
                    @Html.ActionLink("Выбрать", "Details", new { id = item.route_id })
                </td>
            </tr>

            }
        </table>

    </div>

    <a href="javascript:window.print()">Распечатать</a>
    <button class="alert-info">@Html.ActionLink("Выбрать маршрут", "Index", "Routes")</button>
</body>
</html>



